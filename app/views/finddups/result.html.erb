<h1 align= 'center'>Resultado</h1>

<h3 align='center'>Codigo: <%= @code %> </h3>
<h3 align='center'> Estatus: <%= @status %> </h3>


<% if @code == '200' %>
  <h3 align='center'> Palabras repetidas </h3>
  <div class="container">
    <table  class="table table-striped table table-bordered">
      <thead>
        <tr>
          <th>Palabra</th>
          <th>Posiciones en donde se encuentra</th>
        </tr>
      </thead>
      <tbody>
        <% @duplicated_words.word_position.each do |k, v| %>
          <tr>
            <td > <%= k %></td>
            <td ><%= v.join(",") %></td>
          </tr>
        <%end %>
      </tbody>
    </table>
  <div class="container">
<% end %>
<div class="col-xs-5 col-xs-offset-5">
  [<%= link_to "Regresar a la lista de APIS" , root_path, class: "link" %>]
</div>

