<H1 align = 'center'> Crear API</H1>

<div class='row'>
  <div class='col-xs-12'> 
    <!--  los parametros, como las clases, se pasan en un hash -->
    <%= form_for(@api, :html => {class: "form-horizontal", role: "form"}) do |f|  %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "E-Mail"  %>
        </div> 
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Correo electronico", autofocus: true %>
        </div>
      </div>
        
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">  
            <%= f.submit "Crear API KEY", class: 'btn btn-primary btn-lg' %> 
        </div>
      </div>
    <% end %>
    <div class="col-xs-5 col-xs-offset-5">
      [<%= link_to "Regresar a la lista de APIS" , root_path, class: "link" %>]
    </div>
  </div>
</div>